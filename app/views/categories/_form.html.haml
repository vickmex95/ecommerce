.container
  .row
    .offset-md-1.col-md-10
      .card
        .card-body
          %h1.my-5= title ||= "Titulo"
          = form_for @category, builder: BootstrapFormBuilder do |f|
            .row
              = f.errors
              = f.label :name
              = f.text_field :name, placeholder: "Nombre"
              = f.label :description
              = f.text_field :description, placeholder: "Escriba la descripci√≥n..."
              = f.label :Imagen
              = f.file_field :c_img
              .col-md-2
              = f.submit 'Save'
              .col-md-4
                = link_to "Back", home_administrator_path, class: "btn btn-secondary btn-block"
