.container
  .row.my-5
    .card
      .card-body
        %h2.my-5.text-center Sign Up
        = form_for(resource, as: resource_name, url: registration_path(resource_name),builder: BootstrapFormBuilder ) do |f|
          .row
            = f.errors
            = f.label :email
            = f.email_field :email, autofocus: true, placeholder: "Email"
            = f.label :password
            = f.password_field :password, autocomplete: "off", placeholder: "Password"
            = f.label :password_confirmation
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirm"
            = f.label :name
            = f.text_field :name, placeholder: "Name"
            = f.label :last_name
            = f.text_field :last_name, placeholder: "Last Name"
            = f.label :age
            = f.number_field :age, placeholder: "Age"
            = f.label :img
            = f.file_field :img
            = f.label :state
            = f.text_field :state, placeholder: "State"
            = f.label :city
            = f.text_field :city, placeholder: "City"
            = f.label :street
            = f.text_field :street, placeholder: "Street"
            .col-md-2
            = f.submit "Sign up",class:"btn btn-primary btn-block space-link"
            = render "devise/shared/links"